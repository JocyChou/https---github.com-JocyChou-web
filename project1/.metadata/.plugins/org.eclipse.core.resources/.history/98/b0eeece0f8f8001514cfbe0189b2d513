package com.fablix.moviedb.view;

import java.util.Scanner;

public class prompt {
	
	private Scanner userIn; 
	
	public prompt(){
		openScanner();
	}
	
	protected void openScanner(){
		if (userIn == null){
			userIn = new Scanner(System.in);
		}
	}
	
	protected int promptInt(String message){
		System.out.println(message);
		
	}
}
